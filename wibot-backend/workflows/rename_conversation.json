    {
      "parameters": {
        "jsCode": "const rows = $input.all();\n\nif (!rows || rows.length === 0 || !rows[0].json.conversation_id) {\n  return [{\n    json: {\n      success: false,\n      error: 'Conversation not found or access denied'\n    }\n  }];\n}\n\nreturn [{\n  json: {\n    success: true,\n    conversation: {\n      conversation_id: rows[0].json.conversation_id,\n      title: rows[0].json.title,\n      updated_at: rows[0].json.updated_at\n    }\n  }\n}];"
      },
