    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE conversations\nSET title = '{{ $json.newTitle }}', updated_at = NOW()\nWHERE conversation_id = '{{ $json.conversationId }}'::uuid\n  AND user_id = {{ $json.userId }}\nRETURNING conversation_id::text, title, TO_CHAR(updated_at, 'YYYY-MM-DD\"T\"HH24:MI:SS\"Z\"') as updated_at;",
        "options": {}
      },
